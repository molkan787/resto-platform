{
  "kind": "collectionType",
  "collectionName": "stores",
  "info": {
    "name": "store",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "component",
      "repeatable": false,
      "component": "common.address"
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "booking_slots": {
      "type": "component",
      "repeatable": true,
      "component": "common.date-time-slot"
    },
    "enable_booking": {
      "type": "boolean",
      "default": false
    },
    "opening_hours": {
      "type": "component",
      "repeatable": false,
      "component": "common.week-timing",
      "required": true
    },
    "number_of_tables": {
      "type": "integer",
      "min": 1,
      "default": 25
    },
    "number_of_people_per_table": {
      "type": "integer",
      "default": 4,
      "min": 1
    }
  }
}
