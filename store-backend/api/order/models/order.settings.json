{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "name": "Order",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "status": {
      "type": "enumeration",
      "enum": [
        "placed",
        "confirmed",
        "canceled",
        "accepted",
        "declined",
        "ready",
        "shipped",
        "completed"
      ],
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "collection",
        "delivery"
      ],
      "required": true
    },
    "total": {
      "type": "decimal"
    },
    "note": {
      "type": "string"
    },
    "owner": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "menu": {
      "type": "enumeration",
      "enum": [
        "online",
        "pos"
      ],
      "required": true
    },
    "products": {
      "type": "component",
      "repeatable": true,
      "component": "order.order-item"
    },
    "no": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "delivery_address": {
      "type": "component",
      "repeatable": false,
      "component": "order.address"
    },
    "store_id": {
      "type": "string",
      "private": true
    },
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "cod",
        "online_card"
      ],
      "default": "cod",
      "required": true
    },
    "preorder": {
      "type": "component",
      "repeatable": false,
      "component": "order.preorder-date-and-time"
    },
    "attrs": {
      "type": "component",
      "repeatable": false,
      "component": "order.order-attributes"
    }
  }
}
