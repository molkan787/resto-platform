{
  "kind": "collectionType",
  "collectionName": "contact_messages",
  "info": {
    "name": "Contact Message"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "full_name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string"
    },
    "subject": {
      "type": "text",
      "maxLength": 1000
    }
  }
}
