{
  "kind": "collectionType",
  "collectionName": "categories",
  "info": {
    "name": "Category",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "minLength": 2,
      "maxLength": 150
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "products": {
      "collection": "product",
      "via": "category"
    },
    "children": {
      "collection": "category",
      "via": "parent"
    },
    "parent": {
      "model": "category",
      "via": "children"
    },
    "menu": {
      "type": "string",
      "default": "online",
      "private": true,
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "food",
        "drinks"
      ],
      "default": "food",
      "required": true
    }
  }
}
