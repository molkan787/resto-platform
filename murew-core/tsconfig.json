{
    "compileOnSave": true,
    "extends": "@tsconfig/node12/tsconfig.json",
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2018",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "strict": true,
        "declaration": true,
        "declarationMap": true,
        "types": [
            "@types/node"
        ]
    },
    "lib": [
        "ES2018"
    ],
    "include": [
      "src/**/*.ts",
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
}